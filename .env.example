# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Moralis API Configuration
# Get your API key from: https://admin.moralis.io/settings
MORALIS_API_KEY=

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Environment Configuration
NODE_ENV=development

# Testing Configuration (Local Development Only)
# ⚠️  NEVER set to 'true' in production!
# When true: Bypasses email confirmation using admin client (for automated tests)
# When false: Uses normal signup with email confirmation (production behavior)
TEST_MODE=true
NEXT_PUBLIC_TEST_MODE=true

# NEVER set to 'true' in production - this is a security risk!
TEST_MODE=false
